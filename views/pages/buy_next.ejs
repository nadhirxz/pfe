<!DOCTYPE html>
<%- include ('../partials/html') %>
<head>
    <%- include ('../partials/head') %>
    <%- include ('../partials/leaflet') %>
    <%- include ('../partials/lrm') %>
    <% var other = {en: "Other",fr: "Autre",ar: "أخرى"} %>
</head>

<body>
    <%- include ('../partials/navbar') %>
    <div class="col-md-8 col-lg-5 m-auto text-center pt-2" id="delivery-from">
        <div id="delivery">
            <div class="form-group">
                <div class="form-group">
                    <label class="deliver_from_text"></label>
                    <input type="text" class="form-control" value="<% if(partner == 'other') { %><%= other[lang] %><%} else { %><%= partner %><% } %>" disabled>
                </div>
                <div class="form-group">
                    <label for="delivery-thing" class="thing_text"></label>
                    <input type="text" class="form-control" id="thing" placeholder="Enter something" onkeyup="trackInput()">
                </div>
                <div class="form-group">
                    <label class="weight_text"></label>
                    <select class="custom-select" id="delivery-weight">
                        <option value="0" selected class="less_than_5_text"></option>
                        <option value="1" class="not_less_than_5_text"></option>
                    </select>
                </div>
                <% if (partner == 'other') { %>
                <div class="form-group" id="another-shop">
                    <label for="delivery-thing" class="shop_name_text"></label>
                    <input type="text" class="form-control" id="name" placeholder="Enter something" onkeyup="trackInput()">
                </div>
                <div class="form-group">
                    <label class="price_text"></label>
                    <select class="custom-select" id="delivery-thing-price">
                        <option value="0" selected class="less_than_500_text"></option>
                        <option value="1" class="not_less_than_500_text"></option>
                    </select>
                </div>
                <% } %>
            </div>
            <br>
            <button type="button" id="cancel-button" class="btn btn-danger col-4 cancel_text"></button>
            <button type="button" id="next-button" class="btn btn-secondary col-4 disabled next_text"></button>
        </div>
    </div>
    
<%- include ('../partials/footer') %>
</body>
<script src="/lang/buy/<%= lang %>.js"></script>
<%- include ('../partials/scripts') %>
<%- include ('../partials/socket') %>
<script>
    var at = "<%= at %>";
    var gh = "<%= gh %>";
</script>
<script src="/lang/js-pages/buy/<%= lang %>.js"></script>
<script src="/js/disable_refresh.js"></script>
<script>
    fromPlace = "<%= partner %>"
    <% if (place) { %>
    fromPos = [<%= place[0] %>,<%= place[1] %>];
    selectedPlace = "<%= pid %>";
    <% } else { %>
    var selectedPlace;
    <% } %>
</script>
<script src="/js/buy_next.js"></script>